{
  "manifest_version": 3,
  "name": "voucherLoader",
  "version": "1.2",
  "description": "A powerful extension to manage, view and load your brand vouchers in bulk.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://mail.google.com/",
    "https://www.myntra.com/*",
    "https://www.amazon.in/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}